<!DOCTYPE HTML>
<html>
<head>
	<title><%= title %></title>

	<link rel="stylesheet" type="text/css" href="/libs/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" type="text/css" href="/libs/bootstrap/dist/css/bootstrap-theme.css" />
	<link rel="stylesheet" type="text/css" href="/css/style-signin.css" />

</head>
<body>
	<% for(var i in messages){ %>
		<div class="flash"><% messages[i] %></div>
	<% } %>	
	<div class="container">
		<div class="form-container">
			<form action="/signin" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="username" class="col-sm-4">Username:</label>
					
					<div class="col-sm-8">
						<input type="text" name="username" />
					</div>
				</div>

				<div class="form-group">
					<label for="password" class="col-sm-4">Password:</label>
				
					<div class="col-sm-8">
						<input type="password" name="password" />
					</div>
				</div>	

				<div class="form-group col-sm-12">
					<input type="submit" name="submit" class="btn btn-primary col-sm-offset-5 col-sm-6" />
				</div>
			</form>
		</div>
	</div>
	
</body>
</html>